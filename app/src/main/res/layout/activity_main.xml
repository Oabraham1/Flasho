<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:text="Who was the 44th President of the United States?"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textColor="#000000"
        android:visibility="visible" />

    <TextView
        android:id="@+id/answer_key"
        android:layout_width="401dp"
        android:layout_height="190dp"
        android:text="Barrack Obama"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="40sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/myBtn"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_iconmonstr" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/ic_iconmonstr_arrow_28" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="96dp"
        android:layout_height="85dp"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_iconmonstr_trash_can_14" />


</RelativeLayout>